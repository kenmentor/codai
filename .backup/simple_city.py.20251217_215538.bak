import tkinter as tk

# Create the main window
root = tk.Tk()
root.title('Simple City')
root.geometry('800x600')

# Create a canvas widget
canvas = tk.Canvas(root, width=800, height=600, bg='skyblue')
canvas.pack()

# Function to draw buildings
def draw_building(x, y, width, height, color='grey'):
    canvas.create_rectangle(x, y, x + width, y + height, fill=color, outline='black')

# Function to draw roads
def draw_road(x, y, width, height, color='black'):
    canvas.create_rectangle(x, y, x + width, y + height, fill=color, outline='grey')

# Draw some buildings
building_positions = [
    (50, 400, 100, 200),
    (200, 350, 80, 250),
    (350, 300, 120, 300),
    (500, 450, 150, 150),
    (700, 420, 70, 180),
]

for (x, y, width, height) in building_positions:
    draw_building(x, y, width, height)

# Draw roads
draw_road(0, 550, 800, 20)

# Draw some additional details like trees
canvas.create_oval(120, 520, 140, 540, fill='darkgreen', outline='black')
canvas.create_oval(620, 500, 640, 520, fill='darkgreen', outline='black')

# Start the Tkinter main loop
root.mainloop()
